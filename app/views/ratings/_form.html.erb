<%= form_for [@movie, @rating] do |form| %>
  <% if rating.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(rating.errors.count, "error") %> prohibited this rating from being saved:</h2>

      <ul>
        <% rating.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <table>
    <thead>
      <tr>
        <th scope="col">Category</th>
        <% (1..5).each do |num| %>
          <th><%= num %></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% Rating::CATEGORY.each do |category, _| %>
        <tr>
          <td scope="row"><%= label_tag category %></td>
          <% Rating::LEVEL.each do |num| %>
            <td><%= radio_button_tag "rating[categories][#{category}]", num  %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div>
    <%= form.submit %>
  </div>
<% end %>
