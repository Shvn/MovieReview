<div id="<%= dom_id rating %>">
  <span>
    <i>Rating#<%= "#{rating.id}" %></i>
    â€“
    <span title="Average Rating"><%= "#{rating.average_score}" %></span>
  </span>

  <table>
    <tbody>
      <% rating.category_ratings.each do |cr| %>
        <tr>
          <td scope="row"><%= cr.category.name %></td>
          <td>: <%= cr.score %></td>
        </tr>
      <% end %> 
    </tbody>
